@model ChubbReto.Web.Models.CreateBookViewModel

@{
    ViewBag.Title = "Registrar Libro";
}

<div class="container mt-4">

    <h2>Registrar Libro</h2>
    <hr />

    @using (Html.BeginForm("Create", "Libros", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Title, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Ingrese título" })
                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.Year, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Year, new { @class = "form-control", type = "text" })
                @Html.ValidationMessageFor(m => m.Year, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.GenreId, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.GenreId,
                    Model.Genres,
                    "-- Seleccione Género --",
                    new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row mb-3">
            @Html.LabelFor(m => m.NumberOfPages, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.NumberOfPages, new { @class = "form-control", type = "number", min = "1" })
            </div>
        </div>

        <div class="form-group row mb-4">
            @Html.LabelFor(m => m.AuthorId, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.AuthorId,
                    Model.Authors,
                    "-- Seleccione Autor --",
                    new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.AuthorId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-8 offset-md-2">
                <button type="submit" class="btn btn-primary">
                    Guardar
                </button>

                @Html.ActionLink(
                    "Listado",
                    "Index",
                    null,
                    new { @class = "btn btn-secondary ml-2" })
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}